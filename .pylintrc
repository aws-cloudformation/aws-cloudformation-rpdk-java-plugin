[MASTER]

ignore=CVS
jobs=1
persistent=yes

[MESSAGES CONTROL]

disable=
    missing-docstring,          # not everything needs a docstring
    fixme,                      # work in progress
    bad-continuation,           # clashes with black
    too-few-public-methods,     # triggers when inheriting
    ungrouped-imports,          # clashes with isort
    no-self-use,                # clashes with E0213
    duplicate-code,             # duplicate test code - can't be ignored inline (https://github.com/PyCQA/pylint/issues/214)

[BASIC]

good-names=e,ex,f,fp,i,j,k,n,_

[FORMAT]

indent-string='    '
max-line-length=88
